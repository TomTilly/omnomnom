<%- include('../partials/header'); %>

	<form action="/recipes/<%= recipe._id %>/comments" method="POST" class="tt-form bg-light border p-4">
		<h1>Add New Comment to <%= recipe.name %></h1>
		<div class="form-group">
			<label for="author">Author</label>
				<input type="text" name="comment[author]" class="form-control" id="author">
		</div>
		<div class="form-group">
			<label for="text">Comment:</label>
				<textarea name="comment[text]" class="form-control" id="text" rows="5"></textarea>
		</div>
		<div class="form-group">
			<input type="submit" value="Submit" class="btn btn-primary btn-lg btn-block">
		<div class="form-group">
	</form>

<%- include('../partials/footer'); %>