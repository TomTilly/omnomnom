<%- include('../partials/header'); %>

<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST" class="tt-form bg-light border p-4">
	<h1>Edit <%= recipe.name %></h1>
	<div class="form-group">
		<label for="name">Recipe name:</label>
			<input type="text" name="name" class="form-control" id="name" value="<%= recipe.name %>">
	</div>
	<div class="form-group">
			<label for="ingredients">Ingredients:</label>
				<textarea name="ingredients" class="form-control" id="ingredients" aria-describedby="ingredientsHelp" rows="5"><% recipe.ingredients.forEach(function(ingredient){ %><%= ingredient %><% }); %></textarea>
				<small id="ingredientsHelp" class="form-text text-muted">Place each ingredient on a new line. For example:<br>
				1 cup water<br>
				1/2 onion, chopped<br>
				etc...</small>
		</div>
	<div class="form-group">
		<label for="directions">Directions:</label>
			<textarea type="text" name="directions" class="form-control" id="directions" rows="5"><%= recipe.directions %></textarea>
	</div>
	<div class="form-group">
  	<label for="image-url">Image Url</label>
  	<input type="text" class="form-control" name="image" id="image-url" value="<%= recipe.image %>">
  </div>
  <div class="form-group">
		<input type="submit" value="Submit" class="btn btn-primary btn-lg btn-block">
	<div class="form-group">
</form>

<%- include('../partials/footer'); %>